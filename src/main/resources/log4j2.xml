<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" strict="true" name="XMLConfigTest"
               packages="org.apache.logging.log4j.test">

    <Appenders>
        <Appender type="Console" name="theConsoleAppender">
            <Layout type="PatternLayout" pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n"/>
        </Appender>
    </Appenders>

    <Loggers>

        <Root level="INFO">
            <AppenderRef ref="theConsoleAppender"/>
        </Root>

    </Loggers>

</Configuration>